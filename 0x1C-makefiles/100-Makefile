.PHONY = all clean oclean fclean re
CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM  = rm -frv
CFLAGS = -Wall -Werror -Wextra -pedantic

ifeq ($(wildcard m.h),)
$(error "m.h header file is missing.")
endif

all:${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}
clean:
	${RM} *~ ${NAME}   
oclean:
	${RM} ${OBJ}
fclean: clean oclean
re: fclean all
