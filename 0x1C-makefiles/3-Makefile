.PHONY: all clean oclean fclean re

CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm -rfv

all: ${NAME}

${NAME}: ${OBJ}
    ${CC} ${OBJ} -o ${NAME}

%.o: %.c
    ${CC} -c $< -o $@

clean:
    ${RM} ${NAME} ${OBJ} *~ .*~ *.swp *.swo

oclean:
    ${RM} ${OBJ}

fclean: clean
    ${RM} ${NAME}

re: fclean all
